<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6750A3"
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/tt_btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableBottom="@drawable/l_baseline_keyboard_backspace_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:layout_weight="1"
            android:text="THÔNG TIN SINH VIÊN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tt_layoutThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8EAF6"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/tt_imgAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/l_avatar_nam"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!--TODO đổi mssv sang TextView -->
                <EditText
                    android:id="@+id/tt_edtMSSV"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="none"
                    android:focusable="false"
                    android:textColor="#43A047"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tt_edtTen"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="Họ Tên"
                    android:inputType="text"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/tt_RadioGroupGioiTinh"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tt_rbNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:text="Nam"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/tt_rbNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RadioGroup>

        <!-- SEX -->

        <!-- INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <!--DOB-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Ngày Sinh"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/tt_edtNgaySinh"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:hint="Birth Of Day"
                        android:inputType="datetime|date"
                        android:paddingLeft="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Năm Học"
                        android:textAlignment="textEnd"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/tt_edtNamHoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:hint="Year Course"
                        android:inputType="number"
                        android:paddingRight="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!--Cource-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E7E9F5"
            android:gravity="center|start">

            <!--  LAYOUT-BUTTONS-CRUD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Khoa"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/tt_SpinnerKhoa"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center|start" />

            <!--  LAYOUT-BUTTONS-ADVANCE -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tt_btnSua"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="SỬA" />

                <Button
                    android:id="@+id/tt_btnXoa"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="XOÁ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tt_btnClear"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="CLEAR" />

                <Button
                    android:id="@+id/tt_btnRefresh"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="REFRESH" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Linh.L_SinhVien_Them">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6750A3"
            android:gravity="center"
            android:padding="5dp">

            <Button
                android:id="@+id/tt_btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableBottom="@drawable/l_baseline_keyboard_backspace_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-50dp"
                android:layout_weight="1"
                android:text="THÊM SINH VIÊN"
                android:textAlignment="center"
                android:textColor="#03FB0D"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tt_layoutThongTin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8EAF6"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/them_imgAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:src="@drawable/l_avatar_nam"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <EditText
                        android:id="@+id/them_edtMSSV"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:hint="MSSV"
                        android:inputType="number"
                        android:textColor="#43A047"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/them_edtTen"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:hint="Họ Tên"
                        android:inputType="text"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/them_RadioGroupGioiTinh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/them_rbNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:text="Nam"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/them_rbNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RadioGroup>

            <!-- SEX -->

            <!-- INFO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <!--DOB-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="Ngày Sinh"
                            android:textAlignment="textStart"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/them_edtNgaySinh"
                            android:layout_width="181dp"
                            android:layout_height="wrap_content"
                            android:hint="Birth Of Day"
                            android:inputType="datetime|date"
                            android:paddingLeft="20dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="Năm Học"
                            android:textAlignment="textEnd"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/them_edtNamHoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:hint="Year Course"
                            android:inputType="number"
                            android:paddingRight="15dp"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <!--Cource-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_margin="10dp"
                android:background="#E7E9F5"
                android:gravity="center|start">

                <!--  LAYOUT-BUTTONS-CRUD -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Khoa"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/them_SpinnerKhoa"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|start" />

                <!--  LAYOUT-BUTTONS-ADVANCE -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/them_btnClear"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="CLEAR" />

                <Button
                    android:id="@+id/them_btnThem"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:text="THÊM" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>